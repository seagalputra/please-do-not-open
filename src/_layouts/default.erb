<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
  </head>
  <body class="flex flex-col min-h-screen bg-zinc-100 break-words">
    <%= render "navbar", metadata: site.metadata %>

    <main class="w-full lg:max-w-[1230px] lg:mx-auto px-6 grow py-6 mt-[115px]">
      <%= yield %>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
